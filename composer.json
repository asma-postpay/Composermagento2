{
    "name": "asmapostpay/magento2",
    "description": "Postpay Payment Gateway for Magento 2",
    "type": "magento2-module",
    "license": "MIT",
    "version": "2.0.0",
    "minimum-stability": "stable",
    "homepage": "https://github.com/asma-postpay/Composermagento2",
    "keywords": ["gateway", "magento", "magento2", "payment", "postpay"],
    "authors": [
        {
            "email": "asma.hawari@postpay.io",
            "name": "Asma Hawari"
        }
    ],
    "support": {
        "source": "https://github.com/asma-postpay/Composermagento2",
        "issues": "https://github.com/asma-postpay/Composermagento2/issues"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "postpay/postpay-php": "~0.0.4",
        "guzzlehttp/guzzle": "^6.0|^7.0"
    },
    "require-dev": {
        "magento/magento-coding-standard": "*",
        "squizlabs/php_codesniffer": "~3.5.3"
    },
    "autoload": {
        "psr-4": {
            "Postpay\\Payment\\": ""
        },
        "files": [
            "registration.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ],
        "post-update-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ],
        "phpcs": [
            "phpcs -s -p"
        ],
        "phpcbf": [
            "phpcbf -p"
        ],
        "fix": [
            "php-cs-fixer fix ."
        ]
    },
}
